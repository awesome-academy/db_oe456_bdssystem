<main class="form-signin">
  <%= form_for @account do |f| %>
    <section class="text-center">
        <img class="mb-4" src="https://img.icons8.com/clouds/2x/fa314a/apple-camera.png"
          alt="" width="102" height="87">
        <h1 class="h3 mb-3 fw-normal"><%= t(".title") %></h1>
    </section>

    <%= render "shared/error_messages" %>

    <%= f.label :last_name, t(".last_name") %>
    <%= f.text_field :last_name, class: "form-control" %>
    <%= f.label :fitst_name, t(".first_name") %>
    <%= f.text_field :fitst_name, class: "form-control" %>
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :phone, t(".Phone") %>
    <%= f.phone_field :phone , class: "form-control"%>
    <%= f.label :company, t(".company") %>
    <%= f.text_field :company , class: "form-control"%>
    <%= f.label :password, t(".password") %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :password_confirmation, t(".password_confirm") %>
    <%= f.password_field :password_confirmation, class: "form-control", type: "password_confirmation"%>

    <%= f.submit t(".btn_create_account"), class: "w-100 btn btn-lg btn-primary" %>
    <section class="text-center">
      <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
    </section>
  <% end %>
</main>
