<p id="notice"><%= notice %></p>

<h1><%= t(".title") %></h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t(".name") %></th>
      <th><%= t(".address") %></th>
      <th><%= t(".price") %></th>
      <th><%= t(".rooms") %></th>
      <th><%= t(".bathrooms") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.rooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= link_to t(".show"), property %></td>
        <td><%= link_to t(".edit"), edit_property_path(property) %></td>
        <td><%= link_to t(".destroy"), property, method: :delete, data: { confirm: t(".sure_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

