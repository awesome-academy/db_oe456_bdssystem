<tr>
  <td><%= property.name %></td>
  <td><%= property.address %></td>
  <td><%= number_to_currency property.price %></td>
  <td><%= property.rooms %></td>
  <td><%= property.bathrooms %></td>
  <td><%= link_to t(".show"), property, class: "btn btn-primary btn-sm" %></td>
  <td><%= link_to t(".edit"), edit_property_path(property), class: "btn btn-success btn-sm" %></td>
  <td><%= button_to t(".destroy"), property, method: :delete, data: { confirm: t(".sure_sure") }, class: "btn btn-danger btn-sm" %></td>
</tr>
