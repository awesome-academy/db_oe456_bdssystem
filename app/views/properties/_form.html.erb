<%= form_with(model: property) do |form| %>

  <%= render "layouts/validation", item: @property %>

  <div class="field">
    <%= form.label t(".name") , class: "h5"%>
    <%= form.text_field :name , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label t(".address") , class: "h5"%>
    <%= form.text_field :address , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label t(".price") , class: "h5"%>
    <%= form.number_field :price , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label t(".rooms") , class: "h5"%>
    <%= form.number_field :rooms , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label t(".bathrooms") , class: "h5"%>
    <%= form.number_field :bathrooms , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" , accept: (Settings.property.image_format)%>
  </div>

  <div class="actions">
    <%= form.submit t(".save"), class: "btn btn-success"%>
  </div>
<% end %>

<%= javascript_pack_tag "property_handle_size_image" %>
